# Configurações do Banco de Dados
DB_HOST=localhost
DB_USERNAME=kpi
DB_PASSWORD=kpi456
DB_NAME=vista

# Configurações da Aplicação
APP_ENV=production
APP_DEBUG=false
APP_URL=https://kpi.stbextrema.com.br

# Configurações de Email (PHPMailer)
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=your_email@example.com
MAIL_PASSWORD=your_password
MAIL_FROM_ADDRESS=noreply@suntechdobrasil.com.br
MAIL_FROM_NAME="Sistema VISTA"

# Sessão
SESSION_TIMEOUT=1200

# =============================================================================
# AUTENTICAÇÃO API - MIDDLEWARE DE SEGURANÇA
# =============================================================================

# Token de autenticação para endpoints de KPIs
# Gere um token seguro usando: openssl rand -hex 32
# Ou use: https://www.random.org/strings/
VISTA_API_TOKEN=your-secure-token-here-change-this-in-production

# Ambiente de execução: development, staging, production
# development: token opcional, logs detalhados, whitelist ativo
# production: token obrigatório, logs mínimos
VISTA_ENVIRONMENT=development

# Habilitar logging de eventos de autenticação (true/false)
# Logs salvos em: logs/auth.log
VISTA_AUTH_LOGGING=true

# Whitelist de IPs permitidos sem autenticação (separados por vírgula)
# Útil para desenvolvimento local (127.0.0.1) ou servidores internos
# Em produção, remova ou deixe vazio
VISTA_IP_WHITELIST=127.0.0.1,::1
